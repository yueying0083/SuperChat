<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="4dip">

    <TextView
        android:id="@+id/tv_timeline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="6dip"
        android:background="@drawable/bg_timeline"
        android:gravity="center"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_left_pic"
            android:layout_width="46dip"
            android:layout_height="46dip"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dip"
            android:contentDescription="@string/image_desc_left_picture"
            android:src="@drawable/ic_left_default" />

        <FrameLayout
            android:id="@+id/fl_left_content"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="20dip"
            android:layout_marginStart="5dip"
            android:layout_weight="1"
            android:background="@drawable/bg_content"
            android:minHeight="140dip" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <FrameLayout
            android:id="@+id/fl_right_content"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="10dip"
            android:layout_marginStart="20dip"
            android:layout_weight="1"
            android:background="@drawable/bg_content"
            android:minHeight="140dip" />

        <ImageView
            android:id="@+id/iv_right_pic"
            android:layout_width="46dip"
            android:layout_height="46dip"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dip"
            android:contentDescription="@string/image_desc_right_picture"
            android:src="@drawable/ic_left_default" />
    </LinearLayout>

</LinearLayout>